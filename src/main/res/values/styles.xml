<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--
      Base application theme, dependent on API level. This theme is
      replaced by AppBaseTheme from res/values-vXX/styles.xml on newer
      devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Material.Light.DarkActionBar">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <style name="AppDarkBaseTheme" parent="android:Theme.Material">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="pref_about">@drawable/ic_info_outline_black_24dp</item>
    <item name="pref_calendar">@drawable/ic_date_range_black_24dp</item>
    <item name="pref_copy_media">@drawable/ic_content_copy_black_24dp</item>
    <item name="pref_extended">@drawable/ic_select_all_black_24dp</item>
    <item name="pref_external">@drawable/ic_cloud_circle_black_24dp</item>
    <item name="pref_folder">@drawable/ic_folder_black_24dp</item>
    <item name="pref_index_page">@drawable/ic_date_range_black_24dp</item>
    <item name="pref_markdown">@drawable/ic_list_black_24dp</item>
    <item name="pref_template_page">@drawable/ic_date_range_black_24dp</item>
    <item name="pref_theme">@drawable/ic_brightness_high_black_24dp</item>
    <item name="pref_use_index">@drawable/ic_list_black_24dp</item>
    <item name="pref_use_template">@drawable/ic_list_black_24dp</item>

  </style>

  <!-- Application theme. -->
  <style name="AppDarkTheme" parent="AppDarkBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="pref_about">@drawable/ic_info_outline_white_24dp</item>
    <item name="pref_calendar">@drawable/ic_date_range_white_24dp</item>
    <item name="pref_copy_media">@drawable/ic_content_copy_white_24dp</item>
    <item name="pref_extended">@drawable/ic_select_all_white_24dp</item>
    <item name="pref_external">@drawable/ic_cloud_circle_white_24dp</item>
    <item name="pref_folder">@drawable/ic_folder_white_24dp</item>
    <item name="pref_index_page">@drawable/ic_date_range_white_24dp</item>
    <item name="pref_markdown">@drawable/ic_list_white_24dp</item>
    <item name="pref_template_page">@drawable/ic_date_range_white_24dp</item>
    <item name="pref_theme">@drawable/ic_brightness_high_white_24dp</item>
    <item name="pref_use_index">@drawable/ic_list_white_24dp</item>
    <item name="pref_use_template">@drawable/ic_list_white_24dp</item>

  </style>

</resources>
